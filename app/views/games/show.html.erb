
<table id="chess_board" cellpadding="0" cellspacing="0">
    <%= (1...8).each do |x| %>
        <tr>
            <%= (1...8).each do |y| %>
                <td id= <%= coord_to_alg_notation(x, y) %> ><a href="#">
                    <% piece = get_piece_at(x, y) %>
                    <% if !piece.nil? %>
                        <%= piece_html(piece) %>
                    <% end %>
                </a></td>
            <% end %>
        </tr>
    <% end %>
</table>