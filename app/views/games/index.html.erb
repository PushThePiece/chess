
<div class="col-10 offset-1">
  <div class="welcome text-center">
      <h1>Welcome to Chess <%=current_user.email%>!</h1>
      <br/>
      <%= link_to "New Game", games_path, :class => 'btn btn-primary btn-sm center-fluid', :role => "button", method: :post %>
  </div>
  <hr/>  
  <div class="curr-games col-10 offset-1"> 
    <h2>Current Games</h2>
    <table class = "table">
      <% @games.each do |game| %>
        <tr>
          <td>Game No: <%= game.id %></td>
          <td>
            <% if game.white_user_id.nil? || game.black_user_id.nil? %>
              <%= link_to "Join!", game_path(game.id), :class => "btn btn-primary btn-sm", :role => "button", :method => :put %>
            <% else %>
              <% if current_user.id == game.white_user_id || current_user.id == game.black_user_id%>
                <%= link_to "Continue", game_path(game.id), :class => 'btn btn-primary btn-sm', :role => "button", method: :get %>
              <%end%>

            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
  </div>
</div>



